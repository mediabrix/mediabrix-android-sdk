<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/labelMBStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/labelFlexStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonFlexLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load Flex Ad" />

            <Button
                android:id="@+id/buttonFlexStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Flex Ad" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Flex: Title"
            android:maxLength="35" >

        </EditText>

        <EditText
            android:id="@+id/txtLoadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Flex: Loading Text"
            android:maxLength="25" >

        </EditText>

        <EditText
            android:id="@+id/txtGameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Flex: Game Name"
            android:maxLength="32"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/labelViewsStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonViewsLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load Views Ad" />

            <Button
                android:id="@+id/buttonViewsStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Views Ad" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtEntice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Views: Entice Text"
            android:maxLength="65" />

        <EditText
            android:id="@+id/txtOptIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Views: OptIn Button Text"
            android:maxLength="28" />

        <EditText
            android:id="@+id/txtRescueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Views: Rescue Title"
            android:maxLength="65" />

        <EditText
            android:id="@+id/txtRescueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Views: Rescue Text"
            android:maxLength="20" />

        <EditText
            android:id="@+id/txtRewardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Views: Reward Text"
            android:maxLength="20" />

        <EditText
            android:id="@+id/txtRewardImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Views: Reward Item (URL)" />

        <TextView
            android:id="@+id/labelRewardsStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonRewardLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load Rewards Ad" />

            <Button
                android:id="@+id/buttonRewardStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Rewards Ad" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Rewards: Reward Text"
            android:maxLength="20" >
        </EditText>

        <EditText
            android:id="@+id/txtRewardItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Rewards: Reward Item (URL)" >
        </EditText>

        <EditText
            android:id="@+id/txtAchieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Rewards: Achievement Text"
            android:maxLength="32" >
        </EditText>

    </LinearLayout>

</ScrollView>